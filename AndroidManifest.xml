<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.zhgl"
    android:versionCode="1"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/UserAccountTheme" >
        <activity
            android:name="com.android.zhgl.ui.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.zhgl.ui.UserAccountListActivity"
            android:theme="@style/UserAccountTheme" >
        </activity>
        <activity
            android:name="com.android.zhgl.ui.UserAccountDetailActivity"
            android:theme="@style/UserAccountTheme" >
        </activity>
        <activity
            android:name="com.android.zhgl.ui.UserAccountEditActivity"
            android:theme="@style/UserAccountTheme" >
        </activity>
        <activity
            android:name="com.android.zhgl.ui.SettingActivity"
            android:theme="@style/UserAccountTheme" >
        </activity>
        <activity
            android:name="com.android.gesturelocker.ui.GestureLockActivity"
            android:theme="@style/UserAccountTheme" >
        </activity>
    </application>

</manifest>